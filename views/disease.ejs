<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cancer</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        font-family: 'Roboto Mono', monospace;
      }

      body {
        margin: 0;
        box-sizing: border-box;
        background: url('https://i.ibb.co/n1Fdrbq/diana-polekhina-dw6tv-K-Pux-M-unsplash.jpg')
          no-repeat center fixed;
        background-size: cover;
      }

      body::before {
        content: '';
        position: fixed;
        background-color: #289dfcaa;
        width: 100%;
        height: 100vh;
        z-index: -1;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: white;
      }

      .logo {
        font-size: 35px;
        font-family: fantasy;
        color: #000;
        text-decoration: none;
        margin-left: 20px;
      }

      .nav-items {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: white;
        margin-right: 20px;
      }

      .nav-items a {
        text-decoration: none;
        color: black;
        padding: 35px 20px;
      }

      .container {
        margin: 0 15%;
      }

      .flex-container {
        display: flex;
        flex-direction: column;
      }

      footer {
        position: fixed;
        bottom: 0;
      }

      .btm {
        width: 100%;
        margin-top: auto;
      }

      table {
        background-color: rgb(117, 239, 221);
        text-align: center;
        border: 1px solid #000;
      }

      @media (max-width: 680px) {
        .header {
          flex-direction: column;
        }

        .nav-items {
          flex-direction: column;
        }

        .nav-items a {
          text-decoration: none;
          color: black;
          padding: 20px 10px;
        }
      }
    </style>
  </head>
  <body>
    <div class="header">
      <a href="#" class="logo">HealthCare</a>
      <nav class="nav-items">
        <a href="/home">Home</a>
        <a href="/diseases">Diseases</a>
        <a href="/age">Age</a>
        <a href="/calculations">Calculations</a>
      </nav>
    </div>

    <div class="container full-height">
      <div class="flex-container">
        <section>
          <h1><%-disease.name.toUpperCase()%></h1>
          <p><%-disease.info%></p>
        </section>

        <% for(let ai of disease.additionalInfo) { %>
        <section><%-ai%></section>
        <% } %>

        <section>
          <h3>Causes of <%-disease.name%>:</h3>
          <ul>
            <% for(let cause of disease.causes) { %>
            <li><%-cause%></li>
            <% } %>
          </ul>
        </section>

        <section>
          <h3>Most affected age group:</h3>
          <%-disease.mostAffectedAge%>
        </section>

        <section>
          <h3>Prevention:</h3>
          <ul>
            <% for(let p of disease.prevention) { %>
            <li><%-p%></li>
            <% } %>
          </ul>
        </section>

        <section>
          <h3>The appropriate diet for this disease:</h3>
          <ul>
            <% for(let d of disease.diet) { %>
            <li><%-d%></li>
            <% } %>
          </ul>
        </section>

        <section>
          <h3>Cancer treatment centers in Jordan:</h3>
          <ol>
            <% for(let tc of disease.treatmentCenter) { %>
            <li><%-tc%></li>
            <% } %>
          </ol>
        </section>
      </div>
    </div>
  </body>
</html>
